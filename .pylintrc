[MASTER]

ignore-paths=src/tests
ignore=single_file_to_ignore.py

[MESSAGE CONTROL]

disable=raw-checker-failed,
        bad-inline-option,
        locally-disabled,
        file-ignored,
        suppressed-message,
        useless-suppression,
        deprecated-pragma,
        use-symbolic-message-instead,
        missing-module-docstring,
        missing-function-docstring,
        missing-class-docstring,
	invalid-name

[FORMAT]
max-line-length = 80
indent-after-paren = 4
max-statements = 10

[REFACTORING]
max-nested-blocks = 2
[DESIGN]
